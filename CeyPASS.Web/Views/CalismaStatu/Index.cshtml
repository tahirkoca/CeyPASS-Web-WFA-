@model List<CeyPASS.Entities.Concrete.LookupItem>
@{
    ViewData["Title"] = "Çalışma Statüleri";
    var canCreate = ViewBag.CanCreate as bool? ?? false;
    var canUpdate = ViewBag.CanUpdate as bool? ?? false;
    var canDelete = ViewBag.CanDelete as bool? ?? false;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h2>Çalışma Statüleri</h2>
            
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    @if (canCreate)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Yeni Çalışma Statüsü Ekle</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" action="@Url.Action("Create")" class="row g-3">
                            @Html.AntiForgeryToken()
                            <div class="col-md-8">
                                <input type="text" name="ad" class="form-control" placeholder="Çalışma statüsü adı" required />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-plus-circle"></i> Ekle
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Çalışma Statüleri Listesi (@Model.Count kayıt)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Ad</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var statu in Model)
                                    {
                                        <tr>
                                            <td>@statu.Id</td>
                                            <td>
                                                <span id="statuAd_@statu.Id">@statu.Ad</span>
                                                <input type="text" id="statuAdInput_@statu.Id" class="form-control d-none" value="@statu.Ad" />
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @if (canUpdate)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-warning" onclick="editStatu(@statu.Id)">
                                                            <i class="bi bi-pencil"></i> Düzenle
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-success d-none" id="saveBtn_@statu.Id" onclick="saveStatu(@statu.Id)">
                                                            <i class="bi bi-check"></i> Kaydet
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-secondary d-none" id="cancelBtn_@statu.Id" onclick="cancelEdit(@statu.Id)">
                                                            <i class="bi bi-x"></i> İptal
                                                        </button>
                                                    }
                                                    @if (canDelete)
                                                    {
                                                        <form method="post" action="@Url.Action("Delete", new { id = statu.Id })" style="display: inline;">
                                                            @Html.AntiForgeryToken()
                                                            <button type="button" class="btn btn-sm btn-danger btn-sil-onay" data-msg="Bu çalışma statüsünü silmek istediğinizden emin misiniz?">
                                                                <i class="bi bi-trash"></i> Sil
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Kayıt bulunamadı.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="silOnayModal" tabindex="-1" aria-labelledby="silOnayModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="silOnayModalLabel"><i class="bi bi-exclamation-triangle me-2"></i>Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body" id="silOnayModalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="silOnayModalSilBtn"><i class="bi bi-trash me-1"></i>Sil</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <script>
        function editStatu(id) {
            $('#statuAd_' + id).addClass('d-none');
            $('#statuAdInput_' + id).removeClass('d-none');
            $('#saveBtn_' + id).removeClass('d-none');
            $('#cancelBtn_' + id).removeClass('d-none');
            $('button[onclick="editStatu(' + id + ')"]').addClass('d-none');
        }

        function cancelEdit(id) {
            $('#statuAd_' + id).removeClass('d-none');
            $('#statuAdInput_' + id).addClass('d-none');
            $('#saveBtn_' + id).addClass('d-none');
            $('#cancelBtn_' + id).addClass('d-none');
            $('button[onclick="editStatu(' + id + ')"]').removeClass('d-none');
            // Reset input value
            var originalValue = $('#statuAd_' + id).text();
            $('#statuAdInput_' + id).val(originalValue);
        }

        function saveStatu(id) {
            var newAd = $('#statuAdInput_' + id).val();
            if (!newAd || newAd.trim() === '') {
                toastr.warning('Çalışma statüsü adı boş olamaz.');
                return;
            }

            var form = $('<form>', {
                method: 'POST',
                action: '@Url.Action("Update")'
            });
            form.append($('<input>', { type: 'hidden', name: 'id', value: id }));
            form.append($('<input>', { type: 'hidden', name: 'ad', value: newAd.trim() }));
            form.append($('@Html.AntiForgeryToken()'));
            $('body').append(form);
            form.submit();
        }

        (function () {
            var silOnayModalEl = document.getElementById('silOnayModal');
            var silOnayModalBody = document.getElementById('silOnayModalBody');
            var silOnayModalSilBtn = document.getElementById('silOnayModalSilBtn');
            if (silOnayModalEl && silOnayModalBody && silOnayModalSilBtn) {
                document.querySelectorAll('.btn-sil-onay').forEach(function (btn) {
                    btn.addEventListener('click', function () {
                        var form = this.closest('form');
                        var msg = this.getAttribute('data-msg') || 'Silmek istiyor musunuz?';
                        silOnayModalBody.textContent = msg;
                        var modal = new bootstrap.Modal(silOnayModalEl);
                        silOnayModalSilBtn.onclick = function () { modal.hide(); if (form) form.submit(); };
                        modal.show();
                    });
                });
            }
        })();
    </script>
}
