@inject CeyPASS.Business.Abstractions.ISessionContext SessionContext
@inject CeyPASS.Business.Abstractions.IAuthorizationService AuthorizationService
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CeyPASS</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <div class="app-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="@Url.Action("Index", "Home")" class="sidebar-brand">
                    <img src="@Url.Content("~/images/logo.png")" alt="CeyPASS" class="sidebar-logo" 
                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                    <span class="sidebar-logo-fallback" style="display:none;">CeyPASS</span>
                </a>
            </div>
            
            <nav class="sidebar-nav">
                @{
                    var canDashboard = AuthorizationService.ViewAbility("Dashboard");
                    var canPersoneller = AuthorizationService.ViewAbility("Personeller");
                    var canKisiHareket = AuthorizationService.ViewAbility("KisiHareketler");
                    var canIzin = AuthorizationService.ViewAbility("Izinler");
                    var canPuantaj = AuthorizationService.ViewAbility("AylikPuantaj");
                    var canRapor = AuthorizationService.ViewAbility("Raporlar");
                    var canFirma = AuthorizationService.ViewAbility("Firmalar");
                    var canIsyeri = AuthorizationService.ViewAbility("Isyerler");
                    var canDepartman = AuthorizationService.ViewAbility("Departmanlar");
                    var canPozisyon = AuthorizationService.ViewAbility("Pozisyonlar");
                    var canVardiya = AuthorizationService.ViewAbility("Vardiyalar");
                    var canCalismaStatu = AuthorizationService.ViewAbility("CalismaStatuleri");
                    var canCihaz = AuthorizationService.ViewAbility("Cihazlar");
                    var canResmiTatil = AuthorizationService.ViewAbility("ResmiTatiller");
                }
                @if (canDashboard || canPersoneller || canKisiHareket || canIzin || canPuantaj || canRapor)
                {
                <!-- Ana Menü -->
                <div class="nav-section accordion-section">
                    <button type="button" class="nav-section-title accordion-toggle" data-bs-toggle="collapse" data-bs-target="#navSectionAnaMenu" aria-expanded="true" aria-controls="navSectionAnaMenu">
                        <span>Ana Menü</span>
                        <i class="bi bi-chevron-down accordion-icon"></i>
                    </button>
                    <div class="collapse show" id="navSectionAnaMenu">
                    <ul class="nav flex-column">
                        @if (canDashboard)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" 
                               asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i>
                                <span>Ana Sayfa</span>
                            </a>
                        </li>
                        }
                        @if (canPersoneller)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Personel" ? "active" : "")" 
                               asp-controller="Personel" asp-action="Index">
                                <i class="bi bi-people"></i>
                                <span>Personeller</span>
                            </a>
                        </li>
                        }
                        @if (canKisiHareket)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "KisiHareket" ? "active" : "")" 
                               asp-controller="KisiHareket" asp-action="Index">
                                <i class="bi bi-clock-history"></i>
                                <span>Kişi Hareketleri</span>
                            </a>
                        </li>
                        }
                        @if (canIzin)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Izin" ? "active" : "")" 
                               asp-controller="Izin" asp-action="Index">
                                <i class="bi bi-calendar-check"></i>
                                <span>İzinler</span>
                            </a>
                        </li>
                        }
                        @if (canPuantaj)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Puantaj" ? "active" : "")" 
                               asp-controller="Puantaj" asp-action="Index">
                                <i class="bi bi-calendar3"></i>
                                <span>Puantaj</span>
                            </a>
                        </li>
                        }
                        @if (canRapor)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Rapor" ? "active" : "")" 
                               asp-controller="Rapor" asp-action="Index">
                                <i class="bi bi-file-earmark-bar-graph"></i>
                                <span>Raporlar</span>
                            </a>
                        </li>
                        }
                    </ul>
                    </div>
                </div>
                }

                @if (canFirma || canIsyeri || canDepartman || canPozisyon)
                {
                <!-- Organizasyon -->
                <div class="nav-section accordion-section">
                    <button type="button" class="nav-section-title accordion-toggle" data-bs-toggle="collapse" data-bs-target="#navSectionOrganizasyon" aria-expanded="true" aria-controls="navSectionOrganizasyon">
                        <span>Organizasyon</span>
                        <i class="bi bi-chevron-down accordion-icon"></i>
                    </button>
                    <div class="collapse show" id="navSectionOrganizasyon">
                    <ul class="nav flex-column">
                        @if (canFirma)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Firma" ? "active" : "")" 
                               asp-controller="Firma" asp-action="Index">
                                <i class="bi bi-building"></i>
                                <span>Firmalar</span>
                            </a>
                        </li>
                        }
                        @if (canIsyeri)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Isyeri" ? "active" : "")" 
                               asp-controller="Isyeri" asp-action="Index">
                                <i class="bi bi-geo-alt"></i>
                                <span>İşyerleri</span>
                            </a>
                        </li>
                        }
                        @if (canDepartman)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Departman" ? "active" : "")" 
                               asp-controller="Departman" asp-action="Index">
                                <i class="bi bi-diagram-3"></i>
                                <span>Departmanlar</span>
                            </a>
                        </li>
                        }
                        @if (canPozisyon)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Pozisyon" ? "active" : "")" 
                               asp-controller="Pozisyon" asp-action="Index">
                                <i class="bi bi-person-badge"></i>
                                <span>Pozisyonlar</span>
                            </a>
                        </li>
                        }
                    </ul>
                    </div>
                </div>
                }

                @if (canVardiya || canCalismaStatu || canCihaz || canResmiTatil)
                {
                <!-- Ayarlar -->
                <div class="nav-section accordion-section">
                    <button type="button" class="nav-section-title accordion-toggle" data-bs-toggle="collapse" data-bs-target="#navSectionAyarlar" aria-expanded="true" aria-controls="navSectionAyarlar">
                        <span>Ayarlar</span>
                        <i class="bi bi-chevron-down accordion-icon"></i>
                    </button>
                    <div class="collapse show" id="navSectionAyarlar">
                    <ul class="nav flex-column">
                        @if (canVardiya)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "CalismaSekli" ? "active" : "")" 
                               asp-controller="CalismaSekli" asp-action="Index">
                                <i class="bi bi-clock"></i>
                                <span>Vardiyalar</span>
                            </a>
                        </li>
                        }
                        @if (canCalismaStatu)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "CalismaStatu" ? "active" : "")" 
                               asp-controller="CalismaStatu" asp-action="Index">
                                <i class="bi bi-toggles"></i>
                                <span>Çalışma Statüleri</span>
                            </a>
                        </li>
                        }
                        @if (canCihaz)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Cihaz" ? "active" : "")" 
                               asp-controller="Cihaz" asp-action="Index">
                                <i class="bi bi-device-hdd"></i>
                                <span>Cihazlar</span>
                            </a>
                        </li>
                        }
                        @if (canResmiTatil)
                        {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ResmiTatil" ? "active" : "")" 
                               asp-controller="ResmiTatil" asp-action="Index">
                                <i class="bi bi-calendar-event"></i>
                                <span>Resmi Tatiller</span>
                            </a>
                        </li>
                        }
                    </ul>
                    </div>
                </div>
                }

                @{
                    var isSuperAdmin = SessionContext?.RolId == 1;
                }
                @if (isSuperAdmin)
                {
                <!-- Admin Panel -->
                <div class="nav-section accordion-section">
                    <button type="button" class="nav-section-title accordion-toggle" data-bs-toggle="collapse" data-bs-target="#navSectionAdmin" aria-expanded="true" aria-controls="navSectionAdmin">
                        <span>Admin</span>
                        <i class="bi bi-chevron-down accordion-icon"></i>
                    </button>
                    <div class="collapse show" id="navSectionAdmin">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")" 
                               asp-controller="Admin" asp-action="Index">
                                <i class="bi bi-shield-lock"></i>
                                <span>Admin Panel</span>
                            </a>
                        </li>
                    </ul>
                    </div>
                </div>
                }
            </nav>
            
            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">
                        @{
                            var displayName = SessionContext?.CurrentUser?.AdSoyad ?? SessionContext?.CurrentUser?.KullaniciAdi ?? "";
                            var initial = !string.IsNullOrEmpty(displayName) ? displayName[0].ToString().ToUpperInvariant() : "K";
                        }
                        @initial
                    </div>
                    <div class="user-details">
                        <div class="user-name">@(SessionContext?.CurrentUser?.AdSoyad ?? SessionContext?.CurrentUser?.KullaniciAdi ?? "Kullanıcı")</div>
                        <div class="user-role">@(SessionContext?.CurrentUser?.Rol ?? "Kullanıcı")</div>
                    </div>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-ghost btn-sm" title="Çıkış Yap">
                        <i class="bi bi-box-arrow-right"></i>
                    </a>
                </div>
            </div>
            <button type="button" class="sidebar-toggle-btn" id="sidebarToggleBtn" title="Menüyü daralt / genişlet" aria-label="Menüyü daralt veya genişlet">
                <i class="bi bi-chevron-left" id="sidebarToggleIcon"></i>
            </button>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Header -->
            <header class="top-header">
                <div class="header-left">
                    <button class="btn btn-ghost d-lg-none" id="sidebarToggle">
                        <i class="bi bi-list fs-5"></i>
                    </button>
                    <nav class="breadcrumb-nav d-none d-md-flex">
                        <a href="@Url.Action("Index", "Home")"><i class="bi bi-house"></i></a>
                        <i class="bi bi-chevron-right text-muted small"></i>
                        <span class="current">@ViewData["Title"]</span>
                    </nav>
                </div>
                <div class="header-actions d-flex align-items-center gap-1">
                    @await Component.InvokeAsync("FirmaSelect")
                    <!-- Bildirimler dropdown -->
                    <div class="dropdown">
                        <button class="header-btn dropdown-toggle" type="button" id="headerNotifDropdown" data-bs-toggle="dropdown" aria-expanded="false" title="Bildirimler">
                            <i class="bi bi-bell"></i>
                            <span class="header-notif-badge badge rounded-pill bg-danger" id="headerNotifBadge" style="display: none;">0</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end header-dropdown-panel header-notif-panel shadow" aria-labelledby="headerNotifDropdown">
                            <div class="dropdown-header border-bottom bg-light">
                                <strong><i class="bi bi-bell me-2"></i>Bildirimler</strong>
                            </div>
                            <div class="header-notif-body p-3 text-center text-muted">
                                <i class="bi bi-inbox d-block fs-2 mb-2"></i>
                                <span>Henüz bildirim yok.</span>
                            </div>
                            <div class="dropdown-divider my-0"></div>
                            <a class="dropdown-item small text-primary py-2" href="@Url.Action("Index", "Home")#bildirimler">
                                <i class="bi bi-list-ul me-2"></i>Tümünü gör
                            </a>
                        </div>
                    </div>
                    <!-- Ayarlar dropdown -->
                    <div class="dropdown">
                        <button class="header-btn dropdown-toggle" type="button" id="headerSettingsDropdown" data-bs-toggle="dropdown" aria-expanded="false" title="Ayarlar">
                            <i class="bi bi-gear"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end header-settings-menu shadow" aria-labelledby="headerSettingsDropdown">
                            <li><h6 class="dropdown-header">Ayarlar</h6></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Home")"><i class="bi bi-house me-2"></i>Ana Sayfa</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ForgotPassword", "Account")"><i class="bi bi-key me-2"></i>Şifre değiştir</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")"><i class="bi bi-box-arrow-right me-2"></i>Çıkış yap</a></li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="page-content">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="footer">
                &copy; @DateTime.Now.Year CeyPASS - Personel Devam Kontrol Sistemi
            </footer>
        </div>
    </div>

    <!-- Sidebar Overlay for Mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        toastr.options = { positionClass: 'toast-top-end', closeButton: true, progressBar: true, timeOut: 4000 };
    </script>
    <script>
        // Sidebar toggle for mobile
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('open');
            document.getElementById('sidebarOverlay').classList.toggle('active');
        });

        document.getElementById('sidebarOverlay')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.remove('open');
            this.classList.remove('active');
        });

        // Sidebar daralt / genişlet butonu (tıklayınca açılır kapanır)
        (function() {
            var STORAGE_KEY = 'ceypass-sidebar-collapsed';
            var WIDTH_EXPANDED = 280;
            var WIDTH_COLLAPSED = 72;
            var sidebar = document.getElementById('sidebar');
            var btn = document.getElementById('sidebarToggleBtn');
            var icon = document.getElementById('sidebarToggleIcon');
            var root = document.documentElement;

            function setCollapsed(collapsed) {
                root.style.setProperty('--sidebar-width', (collapsed ? WIDTH_COLLAPSED : WIDTH_EXPANDED) + 'px');
                if (collapsed) {
                    sidebar.classList.add('sidebar-narrow');
                    if (icon) {
                        icon.classList.remove('bi-chevron-left');
                        icon.classList.add('bi-chevron-right');
                    }
                } else {
                    sidebar.classList.remove('sidebar-narrow');
                    if (icon) {
                        icon.classList.remove('bi-chevron-right');
                        icon.classList.add('bi-chevron-left');
                    }
                }
                try { localStorage.setItem(STORAGE_KEY, collapsed ? '1' : '0'); } catch (e) {}
            }

            function isCollapsed() {
                return sidebar.classList.contains('sidebar-narrow');
            }

            try {
                var saved = localStorage.getItem(STORAGE_KEY);
                if (saved === '1') setCollapsed(true);
            } catch (e) {}

            if (btn && sidebar) {
                btn.addEventListener('click', function() {
                    setCollapsed(!isCollapsed());
                });
            }
        })();

        // Initialize Bootstrap tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        tooltipTriggerList.map(function(tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Sidebar akordeon: açık/kapalı durumu localStorage'da sakla
        (function() {
            var STORAGE_KEY = 'ceypass-sidebar-accordion';
            var sectionIds = ['navSectionAnaMenu', 'navSectionOrganizasyon', 'navSectionAyarlar', 'navSectionAdmin'];
            function loadState() {
                try {
                    var raw = localStorage.getItem(STORAGE_KEY);
                    return raw ? JSON.parse(raw) : {};
                } catch (e) { return {}; }
            }
            function saveState(state) {
                try { localStorage.setItem(STORAGE_KEY, JSON.stringify(state)); } catch (e) {}
            }
            document.querySelectorAll('.accordion-section [data-bs-toggle="collapse"]').forEach(function(btn) {
                var targetId = btn.getAttribute('data-bs-target');
                if (!targetId) return;
                var id = targetId.replace('#', '');
                var state = loadState();
                if (state[id] === false) {
                    var el = document.getElementById(id);
                    if (el) {
                        el.classList.remove('show');
                        btn.setAttribute('aria-expanded', 'false');
                    }
                }
                var targetEl = document.querySelector(targetId);
                if (targetEl) {
                    targetEl.addEventListener('shown.bs.collapse', function() {
                        state = loadState();
                        state[id] = true;
                        saveState(state);
                    });
                    targetEl.addEventListener('hidden.bs.collapse', function() {
                        state = loadState();
                        state[id] = false;
                        saveState(state);
                    });
                }
            });
        })();

        // Firma seçimi (header) – değişince mevcut sayfada kal
        (function() {
            var sel = document.getElementById('headerFirmaSelect');
            var url = sel && sel.getAttribute('data-set-firma-url');
            if (!sel || !url) return;
            sel.addEventListener('change', function() {
                var returnUrl = encodeURIComponent(window.location.pathname + window.location.search);
                window.location.href = url + '?firmaId=' + sel.value + '&returnUrl=' + returnUrl;
            });
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
