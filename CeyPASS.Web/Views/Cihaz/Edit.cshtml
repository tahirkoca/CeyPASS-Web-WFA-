@model CeyPASS.Entities.Concrete.Cihaz
@{
    ViewData["Title"] = "Cihaz Düzenle";
    var cihazTipleri = ViewBag.CihazTipleri as List<CeyPASS.Entities.Concrete.CihazTip> ?? new List<CeyPASS.Entities.Concrete.CihazTip>();
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h2>Cihaz Düzenle</h2>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <input type="hidden" asp-for="CihazId" />
        
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Cihaz Bilgileri</h5>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="FirmaId" />
                        
                        <div class="mb-3">
                            <label asp-for="CihazAdi" class="form-label">Cihaz Adı <span class="text-danger">*</span></label>
                            <input asp-for="CihazAdi" class="form-control" required />
                            <span asp-validation-for="CihazAdi" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IPAdres" class="form-label">IP Adres <span class="text-danger">*</span></label>
                            <input asp-for="IPAdres" class="form-control" required />
                            <span asp-validation-for="IPAdres" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Port" class="form-label">Port <span class="text-danger">*</span></label>
                            <input asp-for="Port" type="number" class="form-control" required />
                            <span asp-validation-for="Port" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CihazTipi" class="form-label">Cihaz Tipi <span class="text-danger">*</span></label>
                            <select asp-for="CihazTipi" class="form-select" required>
                                <option value="">-- Seçiniz --</option>
                                @foreach (var tip in cihazTipleri)
                                {
                                    if (tip.TipId == Model.CihazTipi)
                                    {
                                        <option value="@tip.TipId" selected="selected">@tip.TipAdi</option>
                                    }
                                    else
                                    {
                                        <option value="@tip.TipId">@tip.TipAdi</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="CihazTipi" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notlar" class="form-label">Notlar</label>
                            <textarea asp-for="Notlar" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notlar" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" asp-for="AktifMi" class="form-check-input" />
                            <label class="form-check-label" for="AktifMi">
                                Aktif
                            </label>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Güncelle
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}
