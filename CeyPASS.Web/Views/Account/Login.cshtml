@{
    ViewData["Title"] = "Giriş";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CeyPASS</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #dc2626 0%, #b91c1c 50%, #991b1b 100%);
            --glass-bg: rgba(255, 255, 255, 0.95);
            --glass-border: rgba(255, 255, 255, 0.2);
            --shadow-color: rgba(185, 28, 28, 0.35);
            --text-primary: #1e293b;
            --text-secondary: #64748b;
            --accent-color: #b91c1c;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background-color: #991b1b;
            background-image: linear-gradient(rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.3)), url('@Url.Content("~/images/ceyport-tekirdag.png")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow: hidden;
        }

        .bg-shapes {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 0;
            pointer-events: none;
        }

        .bg-shapes::before,
        .bg-shapes::after {
            content: '';
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.06);
            animation: float 20s infinite ease-in-out;
        }

        .bg-shapes::before {
            width: 600px;
            height: 600px;
            top: -200px;
            right: -100px;
        }

        .bg-shapes::after {
            width: 400px;
            height: 400px;
            bottom: -100px;
            left: -100px;
            animation-delay: -10s;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-30px) rotate(10deg); }
        }

        .login-container {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 420px;
        }

        .login-card {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-radius: 24px;
            box-shadow: 
                0 25px 50px -12px var(--shadow-color),
                0 0 0 1px var(--glass-border);
            overflow: hidden;
            animation: slideUp 0.6s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-header {
            background: var(--primary-gradient);
            padding: 40px 30px;
            text-align: center;
            position: relative;
        }

        .login-header-logo {
            margin-bottom: 12px;
        }

        .login-header-logo img {
            display: block;
            height: 96px;
            width: auto;
            max-width: 280px;
            margin: 0 auto;
            object-fit: contain;
        }

        .login-header-logo .logo-fallback {
            display: none;
            justify-content: center;
            align-items: center;
            font-size: 2.25rem;
            font-weight: 700;
            color: white;
            letter-spacing: -0.5px;
        }


        .login-body {
            padding: 40px 35px 35px;
        }

        .alert {
            border: none;
            border-radius: 12px;
            padding: 14px 18px;
            font-size: 0.875rem;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .alert-danger {
            background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
            color: #dc2626;
        }
        .alert-success {
            background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
            color: #15803d;
        }

        .alert i {
            font-size: 1.1rem;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 8px;
        }

        .input-group {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-secondary);
            font-size: 1.1rem;
            z-index: 3;
            transition: color 0.3s ease;
        }

        .form-control {
            width: 100%;
            padding: 14px 16px 14px 48px;
            font-size: 0.95rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            background: #f8fafc;
            color: #1e293b;
            -webkit-text-fill-color: #1e293b;
            caret-color: #1e293b;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--accent-color);
            background: #fff;
            box-shadow: 0 0 0 4px rgba(185, 28, 28, 0.15);
        }

        .form-control:focus + .input-icon,
        .input-group:focus-within .input-icon {
            color: var(--accent-color);
        }

        .form-control::placeholder {
            color: #64748b;
        }

        .password-toggle {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--text-secondary);
            cursor: pointer;
            padding: 4px;
            z-index: 3;
            transition: color 0.3s ease;
        }

        .password-toggle:hover {
            color: var(--accent-color);
        }

        .btn-login {
            width: 100%;
            padding: 14px 24px;
            font-size: 1rem;
            font-weight: 600;
            color: white;
            background: var(--primary-gradient);
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            margin-top: 8px;
        }

        .btn-login::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s ease;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px -10px var(--shadow-color);
        }

        .btn-login:hover::before {
            left: 100%;
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .btn-login:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        .btn-login .spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 2px solid rgba(255,255,255,0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin-right: 8px;
        }

        .btn-login.loading .spinner {
            display: inline-block;
        }

        .btn-login.loading .btn-text {
            opacity: 0.8;
        }

        .forgot-password-link {
            font-size: 0.9rem;
            color: var(--accent-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }
        .forgot-password-link:hover {
            color: #7f1d1d;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        .login-footer {
            text-align: center;
            padding: 20px 35px 30px;
            border-top: 1px solid #f1f5f9;
        }

        .login-footer p {
            color: var(--text-secondary);
            font-size: 0.8rem;
        }

        .login-footer a {
            color: var(--accent-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .login-footer a:hover {
            color: #7f1d1d;
        }

        /* Responsive */
        @@media (max-width: 480px) {
            .login-header {
                padding: 30px 20px;
            }
            .login-body {
                padding: 36px 25px 25px;
            }
            .login-header-logo img {
                height: 80px;
                max-width: 240px;
            }
            .login-header-logo .logo-fallback {
                font-size: 1.9rem;
            }
        }

        /* Canlı İzleme Link - Sağ Üst */
        .canli-izleme-link {
            position: fixed;
            top: 24px;
            right: 24px;
            z-index: 100;
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 12px 20px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.25);
            border-radius: 50px;
            color: white;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            animation: fadeInRight 0.6s ease-out 0.3s both;
        }

        .canli-izleme-link:hover {
            background: rgba(255, 255, 255, 0.25);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            color: white;
        }

        .canli-izleme-link i {
            font-size: 1.1rem;
            animation: pulse 2s infinite;
        }

        @@keyframes fadeInRight {
            from {
                opacity: 0;
                transform: translateX(20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.6; }
        }

        @@media (max-width: 480px) {
            .canli-izleme-link {
                top: 16px;
                right: 16px;
                padding: 10px 16px;
                font-size: 0.85rem;
            }
            
            .canli-izleme-link span {
                display: none;
            }
            
            .canli-izleme-link i {
                font-size: 1.25rem;
            }
        }

        /* Dark mode support - girilen metnin her zaman okunaklı olması için color ve -webkit-text-fill-color zorunlu */
        @@media (prefers-color-scheme: dark) {
            :root {
                --glass-bg: rgba(30, 41, 59, 0.95);
                --text-primary: #f1f5f9;
                --text-secondary: #94a3b8;
            }
            .form-control {
                background: #1e293b;
                border-color: #334155;
                color: #f1f5f9;
                -webkit-text-fill-color: #f1f5f9;
                caret-color: #f1f5f9;
            }
            .form-control::placeholder {
                color: #94a3b8;
            }
            .form-control:-webkit-autofill,
            .form-control:-webkit-autofill:hover,
            .form-control:-webkit-autofill:focus {
                -webkit-text-fill-color: #f1f5f9;
                -webkit-box-shadow: 0 0 0 1000px #1e293b inset;
            }
            .form-control:focus {
                background: #0f172a;
                border-color: var(--accent-color);
            }
            .login-footer {
                border-top-color: #334155;
            }
        }
    </style>
</head>
<body>
    <div class="bg-shapes"></div>
    
    <!-- Canlı İzleme Girişi - Sağ Üst -->
    <a href="@Url.Action("Login", "CanliIzleme")" class="canli-izleme-link">
        <i class="bi bi-broadcast"></i>
        <span>Canlı İzleme Girişi</span>
    </a>
    
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-header-logo">
                    <img src="@Url.Content("~/images/logo.png")" alt="CeyPASS" 
                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                    <span class="logo-fallback">CeyPASS</span>
                </div>
            </div>
            
            <div class="login-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <span>@ViewBag.Error</span>
                    </div>
                }
                @if (TempData["LoginSuccess"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle"></i>
                        <span>@TempData["LoginSuccess"]</span>
                    </div>
                }
                
                <form method="post" asp-action="Login" asp-controller="Account" id="loginForm">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group">
                        <label class="form-label">Kullanıcı Adı</label>
                        <div class="input-group">
                            <input type="text" 
                                   class="form-control" 
                                   id="username" 
                                   name="username" 
                                   placeholder="Kullanıcı adınızı girin"
                                   required 
                                   autofocus
                                   autocomplete="username">
                            <i class="bi bi-person input-icon"></i>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Şifre</label>
                        <div class="input-group">
                            <input type="password" 
                                   class="form-control" 
                                   id="password" 
                                   name="password" 
                                   placeholder="Şifrenizi girin"
                                   required
                                   autocomplete="current-password">
                            <i class="bi bi-lock input-icon"></i>
                            <button type="button" class="password-toggle" onclick="togglePassword()">
                                <i class="bi bi-eye" id="toggleIcon"></i>
                            </button>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn-login" id="loginBtn">
                        <span class="spinner"></span>
                        <span class="btn-text">Giriş Yap</span>
                    </button>
                    <div class="text-center mt-3">
                        <a href="@Url.Action("ForgotPassword")" class="forgot-password-link">Şifremi unuttum</a>
                    </div>
                </form>
            </div>
            
            <div class="login-footer">
                <p>&copy; @DateTime.Now.Year CeyPASS - Tüm hakları saklıdır</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }

        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const btn = document.getElementById('loginBtn');
            btn.classList.add('loading');
            btn.disabled = true;
        });
    </script>
</body>
</html>
