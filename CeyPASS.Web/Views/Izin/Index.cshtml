@model List<CeyPASS.Entities.Concrete.KisiIzinListRow>
@{
    ViewData["Title"] = "İzinler";
    var kisiler = ViewBag.Kisiler as List<CeyPASS.Entities.Concrete.KisiListItem> ?? new List<CeyPASS.Entities.Concrete.KisiListItem>();
    var izinTipleri = ViewBag.IzinTipleri as List<CeyPASS.Entities.Concrete.IzinTip> ?? new List<CeyPASS.Entities.Concrete.IzinTip>();
    var selectedPersonelId = ViewBag.SelectedPersonelId as string;
    var selectedIzinTipId = ViewBag.SelectedIzinTipId as int?;
    var baslangicTarih = ViewBag.BaslangicTarih as DateTime? ?? new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
    var bitisTarih = ViewBag.BitisTarih as DateTime? ?? new DateTime(DateTime.Today.Year, DateTime.Today.Month, DateTime.DaysInMonth(DateTime.Today.Year, DateTime.Today.Month));
    var canCreate = ViewBag.CanCreate as bool? ?? false;
    var canUpdate = ViewBag.CanUpdate as bool? ?? false;
    var canDelete = ViewBag.CanDelete as bool? ?? false;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h2>İzinler</h2>
            
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <!-- Filtreler -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Filtreler</h5>
                </div>
                <div class="card-body">
                    <form method="get" action="@Url.Action("Index")" id="filterForm">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-3">
                                <label for="personelId" class="form-label">Personel:</label>
                                <select name="personelId" id="personelId" class="form-select">
                                    <option value="ALL">-- TÜMÜ --</option>
                                    @foreach (var kisi in kisiler)
                                    {
                                        if (kisi.PersonelId == selectedPersonelId)
                                        {
                                            <option value="@kisi.PersonelId" selected="selected">@kisi.AdSoyad</option>
                                        }
                                        else
                                        {
                                            <option value="@kisi.PersonelId">@kisi.AdSoyad</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="col-md-2">
                                <label for="izinTipId" class="form-label">İzin Tipi:</label>
                                <select name="izinTipId" id="izinTipId" class="form-select">
                                    <option value="0">-- TÜMÜ --</option>
                                    @foreach (var tip in izinTipleri)
                                    {
                                        if (tip.IzinTipId == selectedIzinTipId)
                                        {
                                            <option value="@tip.IzinTipId" selected="selected">@tip.Ad</option>
                                        }
                                        else
                                        {
                                            <option value="@tip.IzinTipId">@tip.Ad</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="col-md-2">
                                <label for="baslangic" class="form-label">Başlangıç:</label>
                                <input type="date" name="baslangic" id="baslangic" class="form-control" 
                                       value="@baslangicTarih.ToString("yyyy-MM-dd")" />
                            </div>

                            <div class="col-md-2">
                                <label for="bitis" class="form-label">Bitiş:</label>
                                <input type="date" name="bitis" id="bitis" class="form-control" 
                                       value="@bitisTarih.ToString("yyyy-MM-dd")" />
                            </div>

                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bi bi-search"></i> Ara
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Temizle
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- İzinler Tablosu -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">İzinler (@Model.Count kayıt)</h5>
                    @if (canCreate)
                    {
                        <a href="@Url.Action("Create")" class="btn btn-sm btn-success">
                            <i class="bi bi-plus-circle"></i> Yeni İzin Ekle
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Sicil No</th>
                                        <th>Adı Soyadı</th>
                                        <th>Firma Adı</th>
                                        <th>İzin Tipi</th>
                                        <th>Başlangıç Tarihi</th>
                                        <th>Bitiş Tarihi</th>
                                        <th>Süre (Gün)</th>
                                        <th>Süre (Saat)</th>
                                        <th>Saatlik İzin Mi</th>
                                        <th>Açıklama</th>
                                        <th>İşlenme Tarihi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var izin in Model)
                                    {
                                        <tr>
                                            <td>@(izin.SicilNo ?? "-")</td>
                                            <td>@(izin.AdSoyad ?? "-")</td>
                                            <td>@(izin.FirmaAdi ?? "-")</td>
                                            <td>@(izin.IzinTipi ?? "-")</td>
                                            <td>@izin.IzinBaslangic.ToString("dd.MM.yyyy")</td>
                                            <td>@izin.IzinBitis.ToString("dd.MM.yyyy")</td>
                                            <td>@(izin.SureGun ?? "-")</td>
                                            <td>@izin.SureSaat.ToString("F2")</td>
                                            <td>
                                                @if (izin.SaatlikIzin == "Evet")
                                                {
                                                    <span class="badge bg-info">Evet</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Hayır</span>
                                                }
                                            </td>
                                            <td>@(izin.Aciklama ?? "-")</td>
                                            <td>@(izin.IslenmeTarihi?.ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                                            <td>
                                                @if (canUpdate)
                                                {
                                                    <a href="@Url.Action("Edit", new { id = izin.KisiIzinId })" class="btn btn-sm btn-warning me-1" title="Güncelle">
                                                        <i class="bi bi-pencil"></i> Güncelle
                                                    </a>
                                                }
                                                @if (canDelete)
                                                {
                                                    <button type="button" class="btn btn-sm btn-danger btn-izin-sil" title="Sil"
                                                            data-bs-toggle="modal" data-bs-target="#izinSilModal"
                                                            data-izin-id="@izin.KisiIzinId"
                                                            data-izin-info="@(izin.AdSoyad ?? "") - @(izin.IzinTipi ?? "") (@izin.IzinBaslangic.ToString("dd.MM.yyyy"))">
                                                        <i class="bi bi-trash"></i> Sil
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Seçilen kriterlere uygun izin bulunamadı.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (canDelete)
    {
        <div class="modal fade" id="izinSilModal" tabindex="-1" aria-labelledby="izinSilModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0 pb-0">
                        <h5 class="modal-title d-flex align-items-center gap-2" id="izinSilModalLabel">
                            <i class="bi bi-exclamation-triangle-fill text-warning"></i>
                            Onay
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                    </div>
                    <form id="izinSilForm" method="post" action="@Url.Action("Delete")">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="izinSilIzinId" />
                        <div class="modal-body pt-0">
                            <p class="mb-0">Seçili izin silinsin mi?</p>
                            <p class="small text-muted mt-2 mb-0" id="izinSilInfo"></p>
                        </div>
                        <div class="modal-footer border-0 pt-0">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <i class="bi bi-x-lg me-1"></i>İptal
                            </button>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Tamam
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    @if (canDelete)
    {
        <script>
            (function () {
                var modal = document.getElementById('izinSilModal');
                var form = document.getElementById('izinSilForm');
                var idEl = document.getElementById('izinSilIzinId');
                var infoEl = document.getElementById('izinSilInfo');
                if (!modal || !form || !idEl) return;
                modal.addEventListener('shown.bs.modal', function (e) {
                    var btn = e.relatedTarget;
                    if (!btn) return;
                    var id = btn.getAttribute('data-izin-id');
                    var info = btn.getAttribute('data-izin-info') || '';
                    idEl.value = id || '';
                    if (infoEl) infoEl.textContent = info ? 'İzin: ' + info : '';
                });
            })();
        </script>
    }
}
