@model List<CeyPASS.Entities.Concrete.IsyeriItem>
@{
    ViewData["Title"] = "İşyerleri";
    var firmalar = ViewBag.Firmalar as List<CeyPASS.Entities.Concrete.LookupItem> ?? new List<CeyPASS.Entities.Concrete.LookupItem>();
    var selectedFirmaId = ViewBag.SelectedFirmaId as int?;
    var canCreate = ViewBag.CanCreate as bool? ?? false;
    var canUpdate = ViewBag.CanUpdate as bool? ?? false;
    var canDelete = ViewBag.CanDelete as bool? ?? false;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h2>İşyerleri</h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Filtre</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-controller="Isyeri" asp-action="Index" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Firma</label>
                            <select class="form-select" name="firmaId">
                                <option value="">-- Tümü --</option>
                                @foreach (var f in firmalar)
                                {
                                    if (selectedFirmaId == f.Id)
                                    {
                                        <option value="@f.Id" selected="selected">@f.Ad</option>
                                    }
                                    else
                                    {
                                        <option value="@f.Id">@f.Ad</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button class="btn btn-primary" type="submit">Uygula</button>
                        </div>
                        <div class="col-md-5 d-flex align-items-end justify-content-end">
                            @if (canCreate)
                            {
                                <a class="btn btn-success" asp-controller="Isyeri" asp-action="Create" asp-route-firmaId="@(selectedFirmaId ?? 0)">Yeni İşyeri</a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">İşyeri Listesi (@Model.Count kayıt)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th>FirmaId</th>
                                    <th>İşyeriId</th>
                                    <th>İşyeri Adı</th>
                                    <th>İşlemler</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var x in Model)
                                {
                                    <tr>
                                        <td>@x.FirmaId</td>
                                        <td>@x.IsyeriId</td>
                                        <td>@x.Ad</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                @if (canUpdate)
                                                {
                                                    <a class="btn btn-sm btn-warning"
                                                       asp-controller="Isyeri"
                                                       asp-action="Edit"
                                                       asp-route-firmaId="@x.FirmaId"
                                                       asp-route-isyeriId="@x.IsyeriId">Düzenle</a>
                                                }
                                                @if (canDelete)
                                                {
                                                    <form method="post"
                                                          asp-controller="Isyeri"
                                                          asp-action="Delete"
                                                          asp-route-firmaId="@x.FirmaId"
                                                          asp-route-isyeriId="@x.IsyeriId"
                                                          class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="button" class="btn btn-sm btn-danger btn-sil-onay" data-msg="İşyerini silmek istiyor musunuz?">Sil</button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">Kayıt bulunamadı.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="silOnayModal" tabindex="-1" aria-labelledby="silOnayModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="silOnayModalLabel"><i class="bi bi-exclamation-triangle me-2"></i>Silme Onayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body" id="silOnayModalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="silOnayModalSilBtn"><i class="bi bi-trash me-1"></i>Sil</button>
            </div>
        </div>
    </div>
</div>
<script>
(function () {
    var silOnayModalEl = document.getElementById('silOnayModal');
    var silOnayModalBody = document.getElementById('silOnayModalBody');
    var silOnayModalSilBtn = document.getElementById('silOnayModalSilBtn');
    if (silOnayModalEl && silOnayModalBody && silOnayModalSilBtn) {
        document.querySelectorAll('.btn-sil-onay').forEach(function (btn) {
            btn.addEventListener('click', function () {
                var form = this.closest('form');
                var msg = this.getAttribute('data-msg') || 'Silmek istiyor musunuz?';
                silOnayModalBody.textContent = msg;
                var modal = new bootstrap.Modal(silOnayModalEl);
                silOnayModalSilBtn.onclick = function () { modal.hide(); if (form) form.submit(); };
                modal.show();
            });
        });
    }
})();
</script>

